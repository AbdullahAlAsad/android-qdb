<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <!-- Customize your theme here for changing title menu text and settings color. -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="large">
        <item name="android:textColor">@android:color/white</item>

        <!-- other necessary items here like font etc.-->
    </style>

</resources>
